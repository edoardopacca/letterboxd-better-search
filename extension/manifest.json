{
  "manifest_version": 3,
  "name": "letterboxd-better-search",
  "description": "Improve Letterboxd search with fuzzy, typo-tolerant, and semantic suggestions.",
  "version": "0.1.0",
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
    "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["https://letterboxd.com/*"],
      "js": ["config.js", "content.js"],
      "css": ["overlay.css"],
      "run_at": "document_idle"
    }
  ]

}
