{
  "manifest_version": 3,
  "name": "letterboxd-better-search",
  "description": "Improve Letterboxd search with fuzzy, typo-tolerant, and semantic suggestions.",
  "version": "0.1.0",
  "content_scripts": [
    {
      "matches": ["https://letterboxd.com/*"],
      "js": ["config.js", "content.js"],
      "css": ["overlay.css"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_title": "Letterboxd Better Search",
    "default_icon": {
      "16": "toolbar-icon-16.png",
      "32": "toolbar-icon-32.png"
    }
  }


}
